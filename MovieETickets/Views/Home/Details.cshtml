<div class="card movie-card shadow-lg border-0 rounded-4 overflow-hidden bg-dark text-white mt-4">
    <div class="row g-0">
        <!-- Movie Poster -->
        <div class="col-md-5 position-relative">
            <img src="~/images/movies/@Model.ImgUrl"
                 alt="@Model.Name"
                 class="img-fluid w-100 h-100 object-fit-cover rounded-start border-end border-warning" />
        </div>
        <div class="position-absolute top-0 end-0 p-2">
            <span class="badge bg-@(Model.MovieStatus == MovieETickets.Data.Enums.MovieStatus.Upcoming ? "warning" : Model.MovieStatus == MovieETickets.Data.Enums.MovieStatus.Available ? "success" : "danger") fs-6 p-2">
                @Model.MovieStatus
            </span>
        </div>

        <!-- Movie Details -->
        <div class="col-md-7 p-4 d-flex flex-column justify-content-between">
            <div>
                <h2 class="text-warning fw-bold">@Model.Name</h2>
                <p class="text-light opacity-75">@Model.Description</p>
            </div>

            <div class="row">
                <div class="col-6 mb-2">
                    <span class="fw-bold text-warning">Category:</span>
                    <a href="/Home/ShowAllMoviesInSameCategory?categoryName=@Model.Category.Name"> 
                        <span class="badge bg-secondary">@Model.Category.Name</span></a>
                </div>
                <div class="col-6 mb-2">
                    <span class="fw-bold text-warning">Price:</span>
                    <span class="badge bg-success">$@Model.Price</span>
                </div>
                <div class="col-6 mb-2">
                    <span class="fw-bold text-warning">Cinema:</span>
                    <a href="/Home/ShowAllMoviesInSameCategory?categoryName=@Model.Category.Name">
                        <span class="badge bg-primary">@Model.Cinema.Name</span>
                    </a>
                </div>
                <div class="col-6 mb-2">
                    <span class="fw-bold text-warning">Start Date:</span> @Model.StartDate.ToString("yyyy-MM-dd")
                </div>
                <div class="col-6 mb-2">
                    <span class="fw-bold text-warning">End Date:</span> @Model.EndDate.ToString("yyyy-MM-dd")
                </div>
            </div>


            <!-- Actors Section -->
            <div class="mt-3">
                <p class="fw-bold text-warning">Actors:</p>
                <div class="d-flex flex-wrap">
                    <!-- Loop through actors here -->
                </div>
            </div>

            <!-- Trailer Section -->
            <div class="mt-3">
                <p class="fw-bold text-warning">Trailer</p>
                <div class="ratio ratio-16x9 border border-warning rounded">
                    <iframe src="@Model.TrailerUrl" frameborder="0" allowfullscreen class="rounded"></iframe>
                </div>
            </div>

           @*  <!-- Button Section -->
            <div class="text-center mt-4">
                <a href="https://www.youtube.com/playlist?list=PLDDFkfLheQ9i7sL8sCEakE5CWLJiITeMv"
                   class="btn btn-outline-warning btn-lg rounded-pill shadow-sm" target="_blank">
                    🎬 Watch Movie Trailers
                </a>
            </div> *@
        </div>
    </div>
</div>

<style>
    .movie-card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        box-shadow: 0 4px 10px rgba(255, 193, 7, 0.4);
    }

        .movie-card:hover {
            transform: scale(1.0);
            box-shadow: 0 6px 15px rgba(255, 193, 7, 0.6);
        }

    .object-fit-cover {
        object-fit: fill;
    }
</style>