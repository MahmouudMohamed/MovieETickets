@model List<MovieETickets.Models.Movie>

<h2 class="text-center text-warning">Search Results</h2>

@if (Model.Count == 0)
{
    <p class="text-center text-danger">No movies found.</p>
}
else
{
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-4">
                <div class="card bg-dark text-white">
                    <img src="@movie.ImgUrl" class="card-img-top" alt="@movie.Name">
                    <div class="card-body">
                        <h5 class="card-title text-warning">@movie.Name</h5>
                        <p class="card-text">@movie.Description</p>
                        <a href="/Home/Details?movieId=@movie.Id" class="btn btn-warning">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
