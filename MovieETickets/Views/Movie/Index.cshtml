@section Scripts {
    @if (TempData["notifation"] != null)
    {
        <script>
            toastr.success('@TempData["notifation"]')
        </script>
    }
}
<div class="container my-3">
    <div class="container-fluid">
        <div class="row mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="display-6 m-0">All Movie</h2>
                <a href="/Movie/Create" class="btn btn-success">
                    <i class="bi bi-plus-square"></i> Create new Movie
                </a>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                <table class="table table-hover text-center">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Category</th>
                            <th scope="col">Cinema</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Category.Name</td>
                                <td>@item.Cinema.Name</td>

                                <td>
                                    <a href="/Home/Details?movieId=@item.Id" class="btn btn-primary rounded me-2">
                                        <i class="bi bi-pencil-square"></i> Movie Detiles
                                    </a>
@*                                     <a href="/Cinema/Edit?cinemaId=@item.Id" class="btn btn-warning rounded me-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a href="/Cinema/Delete?cinemaId=@item.Id" class="btn btn-danger rounded delete-btn">
                                        <i class="bi bi-trash"></i> Delete
                                    </a> *@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

