@model MovieETickets.Models.Category

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header navbar-dark bg-dark border-bottom box-shadow mb-3 text-white text-center">
                    <h3><i class="fas fa-plus"></i> Create Category</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Category Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check"></i> Create
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
