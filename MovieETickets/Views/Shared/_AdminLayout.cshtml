<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        body {
            display: flex;
            background-color: #f8f9fa;
        }

        /* Sidebar Styles */
        #sidebar {
            width: 250px;
            min-height: 100vh;
            background: #212529;
            color: white;
            padding: 20px;
            transition: all 0.3s ease;
            z-index: 999;
        }

            #sidebar h3 {
                font-size: 1.5rem;
                text-align: center;
                margin-bottom: 20px;
                font-weight: bold;
            }

            #sidebar a {
                color: white;
                text-decoration: none;
                display: flex;
                align-items: center;
                padding: 12px;
                border-radius: 5px;
                transition: 0.3s ease;
                font-size: 1rem;
            }

                #sidebar a i {
                    margin-right: 10px;
                    font-size: 1.2rem;
                }

                #sidebar a:hover, #sidebar a.active {
                    background: #495057;
                }

        /* Toggle Button for Sidebar */
        #toggle-btn {
            display: none;
            position: absolute;
            top: 15px;
            left: 15px;
            font-size: 1.5rem;
            background: none;
            border: none;
            color: #212529;
            cursor: pointer;
            z-index: 1000;
        }

        /* Main Content */
        #content {
            flex-grow: 1;
            padding: 20px;
            transition: 0.3s ease;
        }

        /* Responsive Sidebar */
        media (max-width: 768px) {
            #sidebar

        {
            width: 0;
            overflow: hidden;
            padding: 0;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
        }

        #sidebar.active {
            width: 250px;
            padding: 20px;
        }

        #toggle-btn {
            display: block;
        }

        }
    </style>
</head>
<body>
    <button id="toggle-btn"><i class="bi bi-list"></i></button>
    <div id="sidebar">
        <h3>🎬 Admin Panel</h3>
        <a asp-controller="Home" asp-action="Index" class="active"><i class="bi bi-house-door"></i> Dashboard</a>
        <a asp-area="Admin" asp-controller="Movie" asp-action="Index"><i class="bi bi-film"></i> Movies</a>
        <a asp-area="Admin" asp-controller="Cinema" asp-action="Index"><i class="bi bi-building"></i> Cinemas</a>
        <a asp-area="Admin" asp-controller="Category" asp-action="Index"><i class="bi bi-tags"></i> Categories</a>
        <a asp-area="Client" asp-controller="Home" asp-action="Index"><i class="bi bi-person-circle"></i> Client Side</a>
    </div>

    <div id="content">
        @RenderBody()
    </div>

    <script>
        document.getElementById("toggle-btn").addEventListener("click", function () {
            document.getElementById("sidebar").classList.toggle("active");
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
