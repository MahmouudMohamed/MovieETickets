<div class="container">
    <h2 class="my-4 text-center">🎬 Admin Dashboard</h2>

    <div class="row g-4">
        <!-- Movies -->
        <div class="col-lg-3 col-md-6">
            <div class="card text-white bg-primary shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-film fs-1"></i>
                    <h4 class="mt-2">Movies</h4>
                    <p class="fs-5">Total: @ViewBag.moive</p>
                    <a asp-controller="Movie" asp-action="Index" class="btn btn-light btn-sm">Manage</a>
                </div>
            </div>
        </div>

        <!-- Categories -->
        <div class="col-lg-3 col-md-6">
            <div class="card text-white bg-success shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-tags fs-1"></i>
                    <h4 class="mt-2">Categories</h4>
                    <p class="fs-5">Total: @ViewBag.category</p>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-light btn-sm">Manage</a>
                </div>
            </div>
        </div>

        <!-- Cinemas -->
        <div class="col-lg-3 col-md-6">
            <div class="card text-white bg-info shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-building fs-1"></i>
                    <h4 class="mt-2">Cinemas</h4>
                    <p class="fs-5">Total: @ViewBag.cinema</p>
                    <a asp-controller="Cinema" asp-action="Index" class="btn btn-light btn-sm">Manage</a>
                </div>
            </div>
        </div>

        <!-- Actors -->
        <div class="col-lg-3 col-md-6">
            <div class="card text-dark bg-warning shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-person-video2 fs-1"></i>
                    <h4 class="mt-2">Actors</h4>
                    <p class="fs-5">Total: @ViewBag.actor</p>
                    <a asp-controller="Actor" asp-action="Index" class="btn btn-light btn-sm">Manage</a>
                </div>
            </div>
        </div>
    </div>
</div>
