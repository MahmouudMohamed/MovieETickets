@model MovieETickets.Models.Actor

<div class="container mt-5">
    <div class="card bg-dark text-white shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="row g-0">
            <!-- 🎥 Actor Profile -->
            <div class="col-md-4">
                <img src="~/images/cast/@Model.ProfilePicture"
                alt="@Model.FirstName @Model.LastName"
                class="img-fluid w-100 h-80 rounded-start object-fit-cover border-end border-warning">
            </div>

            <!-- 📝 Actor Details -->
            <div class="col-md-8 p-4 d-flex flex-column justify-content-around">
                <div>
                    <h2 class="text-warning fw-bold">@Model.FirstName @Model.LastName</h2>
                    <p class="text-light opacity-75">@Model.Bio</p>

                    @if (!string.IsNullOrEmpty(Model.News))
                    {
                        <div class="mt-3">
                            <h5 class="text-warning">Latest News</h5>
                            <p class="text-light opacity-75">@Model.News</p>
                        </div>
                    }
                </div>

                <!-- 🎬 Movies List -->
                @if (Model.actorsMovies != null && Model.actorsMovies.Any())
                {
                    <div class="mt-4">
                        <h4 class="fw-bold text-warning">Movies : </h4>
                        <ul class="list-unstyled">
                            @foreach (var actorMovie in Model.actorsMovies)
                            {
                                int i = 1;
                                <li>
                                    <a href="/Client/Home/Details?movieId=@actorMovie.MovieId" class="text-warning text-decoration-none fw-bold">
                                        @i-@actorMovie.Movie.Name
                                    </a>
                                </li>
                                i++;
                            }
                        </ul>
                    </div>
                }
                else
                {
                    <p class="text-muted">No movies available.</p>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .object-fit-cover {
        object-fit: cover;
    }
</style>
