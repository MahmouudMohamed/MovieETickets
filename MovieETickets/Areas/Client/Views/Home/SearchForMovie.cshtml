@model List<MovieETickets.Models.Movie>

<h2 class="text-center text-warning my-4">Search Results</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-danger text-center">No movies found. Try a different search!</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var movie in Model)
        {
            <div class="col">
                <div class="card bg-dark text-white shadow-lg border-0 h-100">
                    <img src="/images/movies/@movie.ImgUrl" class="card-img-top rounded-top" alt="@movie.Name" style="height: 420px; object-fit: fill;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-warning">@movie.Name</h5>
                        <p class="card-text text-light flex-grow-1">@movie.Description</p>
                        <a href="/Client/Home/Details?movieId=@movie.Id" class="btn btn-warning mt-2 w-100">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
